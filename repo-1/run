#!/bin/bash

SCRIPT_PATH="$( cd "$(dirname "$0")" >/dev/null 2>&1 ; pwd -P )"
command=$1
shift

case ${command} in
"tests")
  echo "running tests..."
  sleep 2
  echo "all tests passed!"
  ;;

"schema")
  echo "generating schema..."
  ./repo-1/scripts/generate-schema.sh
  ;;

"clone-repo-2")
  echo "cloning repo-2..."
  export GIT_BRANCH_REPOS=$(git rev-parse --abbrev-ref HEAD)
  rm -rf repo-1/.temp
  mkdir repo-1/.temp
  cd repo-1/.temp
  git clone git@github.com:margostino/multiplex-request.git
  cd multiplex-request

  BRANCH_EXIST_IN_REPO_2=$(git checkout ${GIT_BRANCH_REPOS} 2>&1)
  echo "exist? ${BRANCH_EXIST_IN_REPO_2}"
  if [[ ${BRANCH_EXIST_IN_REPO_2} == "error"* ]]; then
    echo "branch ${GIT_BRANCH_REPOS} does not exist in repo-2"
    git checkout -b ${GIT_BRANCH_REPOS}
    echo "branch created"
  else
    echo "branch ${GIT_BRANCH_REPOS} already exists in repo-2"
    git checkout ${GIT_BRANCH_REPOS}
  fi

  echo "repo-2 cloned!"
  ;;

"update-schema")
  echo "updating schema..."
  mv repo-1/schema.json repo-1/.temp/multiplex-request/repo-2/schema.json
  cd repo-1/.temp/multiplex-request/repo-2
  ls -la
  git add schema.json
  git commit -m "update schema"
  git push origin ${GIT_BRANCH_REPOS}
  echo "schema updated!"
  ;;

"build")
    echo "building app..."
    sleep 2
    echo "build done!"
  ;;

*)
  echo 'Invalid command'
  exit 1
  ;;
esac
